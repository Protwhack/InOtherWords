{
  "name": "InOtherWords",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "InOtherWords Chrome Extension",
  "icons": {
    "16": "POLYYOU-128.png",
    "48": "POLYYOU-128.png",
    "128": "POLYYOU-128.png"
  },
  "background": {
    "scripts": [
      "utilities.js", "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "POLYYOU-128.png",
    "default_title": "InOtherWords",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "config.js", "utilities.js", "inject.js"
      ],
      "css": [
        "inject.css"
      ],
      "run_at": "document_end"
    }
  ]
}