{
  "name": "InOtherWords",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "InOtherWords Chrome Extension",
  "icons": {
    "16": "W.png",
    "48": "W.png",
    "128": "W.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "W.png",
    "default_title": "InOtherWords",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "utilities.js", "cropper.min.js", "inject.js"
      ],
      "css": [
        "inject.css", "cropper.min.css"
      ],
      "run_at": "document_end"
    }
  ]
}