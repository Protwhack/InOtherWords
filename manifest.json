{
  "name": "InOtherWords",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "InOtherWords Chrome Extension",
  "icons": {
    "16": "image/POLYYOU-128.png",
    "48": "image/POLYYOU-128.png",
    "128": "image/POLYYOU-128.png"
  },
  "background": {
    "scripts": [
      "lib/aws-sdk-2.6.10.min.js",
      "js/config.js",
      "js/mappingData.js",
      "js/utilities.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "image/POLYYOU-128.png",
    "default_title": "InOtherWords",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "js/config.js",
        "js/utilities.js",
        "js/inject.js"
      ],
      "css": [
        "css/inject.css"
      ],
      "run_at": "document_end"
    }
  ]
}